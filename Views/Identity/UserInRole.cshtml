@model GerenciamentoIdentity.Models.ViewModels.ManageUserRolesViewModel
@{
    ViewData["Title"] = "Gerenciar permissões";
    var usuarioSelecionado = ViewData["UsuarioSelecionado"];
}

<div class="container">
    <div class="row">
        <h1>Gerenciamento do Identity</h1>
        <h4>Permissões do usuário: @usuarioSelecionado</h4>
        <hr />
    </div>
    <div class="row">
        <div class="card">
            <div id="viewAll" class="card-body table-responsive">
                <form asp-controller="Identity" method="post" asp-action="UpdateUserInRole" asp-route-id="@Model.UserId" class="d-inline">
                    <input asp-for="@Model.UserId" type="hidden" />
                    <table class="table table-striped" id="userRolesTable">
                        <thead>
                            <tr>
                                <th>
                                    Permissão
                                </th>
                                <th>
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @for (int i = 0; i < Model.UserRoles.Count(); i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="@Model.UserRoles[i].RoleName" type="hidden" />
                                        @Model.UserRoles[i].RoleName
                                    </td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input asp-for="@Model.UserRoles[i].Selected" class="form-check-input" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="col-sm-12" style=" padding: 20px 20px 0px 0px">
                        <button type="submit" id="save" class="btn btn-success">
                            <i class="fa fa-check"></i>
                            Salvar
                        </button> |
                        <a class="btn btn-primary" href="@Url.Action("Index", "Identity")">
                            <i class="fa-solid fa-arrow-left"></i>
                            Voltar
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>